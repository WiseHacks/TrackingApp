<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:backgroundTint="#fff"
    android:layout_height="match_parent"
    tools:context=".DeveloperAuth">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/developerlogin" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#ff66c4"
        app:layout_constraintBottom_toTopOf="@+id/edtTextDeveloperLoginEmail"
        app:layout_constraintEnd_toEndOf="@+id/edtTextDeveloperLoginEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtTextDeveloperLoginEmail" />

    <EditText
        android:id="@+id/edtTextDeveloperLoginEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="50dp"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#ff66c4"
        app:layout_constraintBottom_toTopOf="@+id/edtTextDeveloperLoginPassword"
        app:layout_constraintEnd_toEndOf="@+id/edtTextDeveloperLoginPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtTextDeveloperLoginPassword" />

    <EditText
        android:id="@+id/edtTextDeveloperLoginPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="15dp"
        android:inputType="textPassword"
        android:hint="Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTextDeveloperLoginEmail" />

    <Button
        android:id="@+id/btnDeveloperForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot\nPassword"
        android:background="@drawable/buttondesign4"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:textColor="#fff"
        android:fontFamily="@font/baloo_bhai"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="@+id/edtTextDeveloperLoginPassword"
        app:layout_constraintTop_toBottomOf="@+id/edtTextDeveloperLoginPassword" />

    <Button
        android:id="@+id/btnDeveloperLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@drawable/buttondesign4"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="#fff"
        android:fontFamily="@font/baloo_bhai"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/edtTextDeveloperLoginPassword"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/edtTextDeveloperLoginPassword" />

        <TextView
            android:id="@+id/btnDeveloperRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Don't have an account? Register here"
            android:textColor="#303F9F"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btnDeveloperLogin"
            app:layout_constraintStart_toStartOf="@+id/btnDeveloperForgotPassword"
            app:layout_constraintTop_toBottomOf="@+id/btnDeveloperForgotPassword" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/edtTextDeveloperLoginPassword"
        app:layout_constraintStart_toStartOf="@+id/edtTextDeveloperLoginPassword"
        app:layout_constraintTop_toBottomOf="@+id/edtTextDeveloperLoginPassword" />

        <ProgressBar
            android:id="@+id/progressBarDeveloper"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>