<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >

    <item android:state_pressed="true">
        <shape>
        <corners
            android:radius="100dp"
            />
        <gradient
            android:angle="45"
            android:centerX="46%"
            android:centerColor="#003380"
            android:startColor="#003380"
            android:endColor="#003380"
            android:type="linear"
            />
        <padding
            android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />
        <size
            android:width="270dp"
            android:height="60dp"
            />
        </shape>
    </item>
