<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >

    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="50dp"
                />
            <solid android:color="#1D5A88"/>
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="150dp"
                android:height="50dp"
                />
        </shape>
    </item>

    <item>
        <shape>
            <corners
                android:radius="50dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#1D9801"
                android:startColor="#097A18"
                android:endColor="#006536"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="150dp"
                android:height="50dp"
                />
        </shape>
    </item>


</selector>